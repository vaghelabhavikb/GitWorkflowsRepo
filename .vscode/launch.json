{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Current TS File",
      "type": "node",
      "request": "launch",
      "program": "${file}",                // Debugs the currently open .ts file
      "runtimeExecutable": "npx",          // Or full path if global: "${workspaceFolder}/node_modules/.bin/tsx"
      "runtimeArgs": ["tsx"],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal"      // Optional: shows console.log in terminal
    }
  ]
}